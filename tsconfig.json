{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2016",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "lib": [
      "es2017",
      "esnext.asynciterable",
      "dom"
    ],
    "paths": {
      "*": [
        "libs/*"
      ],
     "#test/*": [
        "./test/*"
      ],
      "#app/*": [
        "./src/*"
      ]
    },
    "strictNullChecks": true
  },
  "include": [
    "./src",
    "./test"
  ],
  "compileOnSave": false
}
